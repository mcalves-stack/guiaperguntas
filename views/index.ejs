<%- include('../views/partials/head.ejs') %> 
<%- include('../views/partials/navbar.ejs') %>
<body>
  <div id="ca" class="container">
    <h1 class="text-center">Perguntas</h1>
    <hr>
    <a href="/perguntar" class="btn btn-primary">Perguntar</a>
    <hr>
    <% perguntas.forEach(pergunta => { %>
      <div class="card">
        <div class="card-body">
          <h3><%- pergunta.titulo %> </h3>
        </div>
        <div class="card-footer">
          <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-primary">Responder</button></a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
